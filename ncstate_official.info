; Official Drupal 6 Theme developed by Nick Young (njyoung / usaussie)

name = NC State University Theme
project = ncstate_official
description = Official Theme for NC State University (Drupal 6 only)
version = 6.x-2.6
core = 6.x
engine = phptemplate

; for updates to the theme, specify features server location
project status url = http://drupal.ncsu.edu/features/fserver

;960 Grid System Styles, from http://www.gridsystemgenerator.com
stylesheets[all][]   = css/960/reset.css
stylesheets[all][]   = css/960/text.css
stylesheets[all][]   = css/960/900_90_0_0.css


; styles provided by NC State University Communications Office
stylesheets[all][]   = css/base/screen.css
stylesheets[print][] = css/base/print.css

; Custom style files for website manager to add rules to (to override anything in other stylesheets)
stylesheets[all][]   = custom/css/custom-screen.css
stylesheets[print][] = custom/css/custom-print.css

; javascript that will run on the entire website
scripts[] = js/base.js

; FILES FOR THE CYCLE PLUGIN
scripts[]           = js/plugins/jquery.cycle/jquery.cycle.all.min.js
stylesheets[all][]  = css/base/plugins/jquery.cycle/jquery.cycle.css

; set features to NULL, so none of the defaults are displayed
features[] = NULL

regions[brandbar]                   = Brand Bar Region
regions[header_search]              = Search Region in Header
regions[horizontal_main_menu]       = Horizontal Main Menu
regions[left_above_menu]            = Above Left Menu Region
regions[left_primary_menu]          = Left Primary Menu
regions[left_secondary_menu]        = Left Secondary Menu
regions[left_below_menu]            = Below Left Menu Region
regions[main_image]                 = Main Image
regions[main_above_content]         = Above Main Content
regions[content]                    = Main Content
regions[main_below_content]         = Below Main Content
regions[right_top_sidebar]          = Right Top Sidebar (No Style)
regions[right_main_sidebar]         = Right Main Sidebar (Styled)
regions[right_main_blank_sidebar]   = Right Main Sidebar (No Style)
regions[right_bottom_sidebar]       = Right Bottom Sidebar (Styled)
regions[footer_menu]                = Footer Menu
